{
  "compilerOptions": {
    // Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "types": ["node"],

    // Декораторы
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,

    // Outputs
    "sourceMap": true,
    "noEmitOnError": true,

    // Строгая типизация
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Стиль / модули
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}